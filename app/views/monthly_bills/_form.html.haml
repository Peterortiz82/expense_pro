#form
  .container
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h2 Enter Monthly Bill
        .panel-body
          = form_for @monthly_bill do |f|
            = f.label :name, 'Bill'
            = f.text_field :name, class: "form-control"
            = f.label :amount
            = f.number_field :amount, class: "form-control", step: 'any'
            = f.label :due_date
            = f.date_field :due_date, placeholder: '(eg. 25th)',class: "form-control"
            %br
            = f.submit 'Submit', class: 'btn btn-primary pull-right'
            = link_to 'Back', :back, class: 'pull-left'