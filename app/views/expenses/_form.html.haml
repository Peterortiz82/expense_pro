- if @expense.errors.any?
  %ul.errors
    - @expense.errors.full_messages.each do |msg|
      %li= msg
.container
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h2 Enter Expense
      .panel-body
        = form_for @expense do |f|
          = f.label :category_id
          %br
          = f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true
          %br
          = f.label :sub_category_id, 'Expense'
          %br
          = f.grouped_collection_select :sub_category_id, Category.order(:name), :sub_categories, :name, :id, :name, include_blank: true
          %br
          = f.label :name, 'Expense'
          %br
          = f.text_field :amount, class: "form-control"
          = f.label :amount
          %br
          = f.text_field :amount, class: "form-control"
          %br
          = f.label :description
          %br
          = f.text_area :description, class: "form-control"
          %br
          = f.submit 'Submit', class: 'btn btn-primary pull-right'