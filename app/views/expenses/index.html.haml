-if @expenses.empty?
  %h4 Opps! Looks like We could not find any results that matched your criteria or you have not logged any expenses.
  = link_to 'Back', :back
  |
  = link_to 'Log Expense', new_expense_path
-else
  .col-md-1-pull-left
  = button_tag 'Search', id: 'search-button', class: 'btn btn-default' do
    %span.glyphicon.glyphicon-search
  = render 'search'
  .panel.panel-default
    .table-responsive
      %table.table.table-bordered
        %tr
          %th= sort_link @search, :created_at, 'Date'
          %th= sort_link @search, :user_email, 'Person'
          %th= sort_link @search, :category_id
          %th  Expense
          %th= sort_link @search, :amount
          %th  Description
          %th  Remove
        - @expenses.each do |t|
          %tr
            %td= t.expense_date.strftime("%B %d, %Y")
            %td= t.user.email
            -if t.category
              %td= t.category.name
            -else
              %td= 'Other'
            -if t.sub_category
              %td= t.sub_category.name
            -else
              %td= t.name
            %td= number_to_currency t.amount
            %td= t.description
            %td= link_to 'Delete', t, method: :delete
  = will_paginate @expenses
  = link_to 'Log Expense', new_expense_path, class: 'btn btn-primary pull-right'