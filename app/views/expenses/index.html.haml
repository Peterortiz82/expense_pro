-if @expenses.empty?
  %h3 You have no expenses logged.
-else
  .panel.panel-default
    %table.table.table-bordered
      %tr
        %th Date
        %th Category
        %th Expense
        %th Amount
        %th Description
      - @expenses.each do |t|
        %tr
          %td= t.created_at.strftime("%B %d, %Y")
          %td= t.category_id
          %td= t.sub_category_id
          %td= number_to_currency t.amount
          %td= t.description
= link_to 'Log Expense', new_expense_path, class: 'btn btn-primary pull-right'