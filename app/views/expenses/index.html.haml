-if @expenses.empty?
  %h3 You have no expenses logged.
-else
  .panel.panel-default
    .table-responsive
      %table.table.table-bordered
        %tr
          %th= sort_link @q, :created_at, 'Date'
          %th= sort_link @q, :category_id
          %th  Expense
          %th= sort_link @q, :amount
          %th Description
        - @expenses.each do |t|
          %tr
            %td= t.created_at.strftime("%B %d, %Y")
            -if t.category
              %td= t.category.name
            -else
              %td= 'Other'
            -if t.sub_category
              %td= t.sub_category.name
            -else
              %td= t.name
            %td= number_to_currency t.amount
            %td= t.description
  = will_paginate @expenses
= link_to 'Log Expense', new_expense_path, class: 'btn btn-primary pull-right'