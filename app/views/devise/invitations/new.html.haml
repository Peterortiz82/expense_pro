.col-md-5.col-centered
  .panel.panel-default
    .panel-heading
      %h2= t "devise.invitations.new.header"
    .panel-body#form-reg
      .devise
        %p Sending an invitation will allow you to give read/write permissions for any of your lists to the user that you invite.
      = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f|
        - resource.class.invite_key_fields.each do |field|
          .form-group
            = f.label field
            %br
            = f.text_field field, class: "form-control"
          .actions
            = f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary"
