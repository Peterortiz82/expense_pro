%table#templateColumns{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
  %tr
    %td.templateColumnContainer{:align => "center", :valign => "top", :width => "50%"}
      %table{:border => "1", :cellpadding => "10", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th Date
            %th Category
            %th Expense
            %th Amount
            %th Description
        - @report.each do |t|
          %tr
            %td{style: 'padding: 5px;'}= t.expense_date.strftime("%m/%d/%Y")
            -if t.category
              %td{style: 'padding: 5px;'}= t.category.name
            -else
              %td{style: 'padding: 5px;'}= 'Other'
            -if t.sub_category
              %td{style: 'padding: 5px;'}= t.sub_category.name
            -else
              %td{style: 'padding: 5px;'}= t.name
            %td{style: 'padding: 5px;'}= number_to_currency t.amount
            %td{style: 'padding: 5px;'}= t.description